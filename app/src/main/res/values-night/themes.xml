<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IDAdmision2023" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primarioOscuro</item>
        <item name="colorPrimaryVariant">@color/primarioClaro</item>
        <item name="colorOnPrimary">@color/naranjaNMS</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verdeModalidades</item>
        <item name="colorSecondaryVariant">@color/primarioClaro</item>
        <item name="colorOnSecondary">@color/primarioOscuro</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!--Mi estilo-->
    <style name="Splash_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


</resources>